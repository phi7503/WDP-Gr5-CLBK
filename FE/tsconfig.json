{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"],
      "@hooks/*": ["src/hooks/*"],
      "@router/*": ["src/router/*"],
      "@context/*": ["src/context/*"],
      "@lib/*": ["src/lib/*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": ["src"]
}
